@model IEnumerable<FlorDeLoto.Models.Platillo>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Restaurante Flor De Loto</h1>
</div>

<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <ol class="carousel-indicators">
    <li data-bs-target="#carousel" data-bs-slide-to="0" class="active"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="1"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/imagenes/sliders/fachada.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/imagenes/sliders/restaurante.jpg" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </button>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center mt-3">
            <h2>Platillos populares</h2>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <div class="titulo-divisor"></div>
        </div>
    </div>
    <div class="row">
    @if (Model.Count()>0)
    {
        @foreach (var platillo in Model.OrderBy(o => o.Id))
        {
            <div >
                <div class="card" style="width: 18rem;">
                <img src="/@platillo.UrlImagen" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@platillo.Nombre</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Html.DisplayNameFor(model => model.Precio):@platillo.Precio</li>
                    <li class="list-group-item">@Html.DisplayNameFor(model => model.Categoria):@platillo.Categoria</li>
                </ul>
                <div class="card-body">
                    <button class="elmasboton"><a asp-controller="Platillo" asp-action="Details" asp-route-id="@platillo.Id">Ver Detalles</a></button>
                </div>
                </div>
            </div>
            
        }
    }
    </div>
</div>